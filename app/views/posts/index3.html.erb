<div class="title">
  <h1>Posts</h1>
</div>

<div class="menu">
  <%= link_to '+ Create new post', new_post_path %>
</div>

<div class="container">
  <% @posts.each do |post| %>
    <div class="posts truncate">
      <h3><%= link_to post.title, post %></h3>
      <%= post.body %>
      <br>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= button_to post_path(post), method: :delete do %>
        <i class="fa-sharp fa-solid fa-trash"></i>
      <% end %>
    </div>
  <% end %>
</div>